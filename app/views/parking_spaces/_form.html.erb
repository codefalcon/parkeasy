      <h2><%= pluralize(@parking_space.errors.count, "error") %> prohibited this parking_space from being saved:</h2>

      <ul>
      <% @parking_space.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
       <div class="span6">
         <div class="field">
           <%= f.label :place %><br />
           <%= f.text_field :place %>
         </div>
         <div class="field">
           <%= f.label :address %><br />
           <%= f.text_area :location_address, :rows => "5" %>
         </div>
         <div class="field">
           <%= f.label :location_x %><br />
           <%= f.text_field :location_x %>
         </div>
         <div class="field">
           <%= f.label :location_y %><br />
           <%= f.text_field :location_y %>
         </div>
         <div class="field">
           <%= f.label :contact_number %><br />
           <%= f.text_field :contact_number %>
         </div>
       </div>
       <div class="span6">
             <img src="http://maps.googleapis.com/maps/api/staticmap?zoom=13&size=600x300&maptype=roadmap&markers=color:green%7Clabel:P%7C13.012802936299424,80.20887225866318&sensor=false">
       </div>
  </div>
