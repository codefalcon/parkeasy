    <td><%=  %></td>
    <td><%=  %></td>
    <td><%=  %></td>
    <td><%=  %></td>    
  </tr>  
  
       </table>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
