    <%= parking_space_lot_fields.label :start_date %><br />
    <%= parking_space_lot_fields.date_select :start_date %>
  </div>
  <div class="field">
    <%= parking_space_lot_fields.label :end_date %><br />
    <%= parking_space_lot_fields.date_select :end_date %>
  </div>
  <div class="field">
    <%= parking_space_lot_fields.label :start_time %><br />
    <%= parking_space_lot_fields.time_select :start_time %>
  </div>
  <div class="field">
    <%= parking_space_lot_fields.label :end_time %><br />
    <%= parking_space_lot_fields.time_select :end_time %>
  </div>
  <div class="field">
    <%= parking_space_lot_fields.label :allowed_vehicle_type_id %><br />
    <%= parking_space_lot_fields.select :allowed_vehicle_type_id, options_for_select(@allowed_vehicle_types),{},{} %>
  </div>
  <div class="field">
    <%= parking_space_lot_fields.label :number_of_lots %><br />
    <%= parking_space_lot_fields.number_field :number_of_lots %>
  </div>
  <div class="field">
    <%= parking_space_lot_fields.label :preferred_duration_type_id %><br />
    <%= parking_space_lot_fields.select :preferred_duration_type_id, options_for_select(@preferred_duration_types),{},{} %>
